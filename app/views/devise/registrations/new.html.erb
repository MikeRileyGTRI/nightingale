<body class="sign_in_body">
<div class="container">
  <div class="row v-align-row">
    <div class="col-md-8">
      <h1 class="title-name">Nightingale</h1>
        <h2 class="title-desc">A Community Electronic Death Registration System.</h2><br />
        <a class="title-more title-more-link" href="https://www.cdc.gov/nchs/nvss/modernization/">learn more</a>
    </div>
    <div class="col-md-4">
      <div class="sign-in-box">
        <h2 class="title-sign-in">Sign up</h2><br />
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'sign-in-field' %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'sign-in-field' %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'sign-in-field' %>
          </div>
          <div class="field">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'sign-in-field' %>
          </div>
          <div class="field">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'sign-in-field' %>
          </div>
          <div class="field">
            <%= f.label 'Telephone #' %>
            <%= f.text_field :telephone, class: 'sign-in-field' %>
          </div>
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
