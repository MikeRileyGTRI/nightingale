<%= simple_form_for(@death_record, html: { class: 'form-vertical' }, method: :put, url: wizard_path) do |f| %>

 <fieldset>
    <legend>Method of Disposition</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <%= f.input :method_of_disposition, label: false, as: :radio_buttons, :collection => ['Burial', 
                                                                                                'Cremation', 
                                                                                                'Donation', 
                                                                                                'Entombment', 
                                                                                                'Removal from State',
                                                                                                'Other (specify)'] %>
        </div>
        <div class= "col-md-5">
          <%= f.input :method_of_disposition_specified, label: false %>                                                                             
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Place of Disposition</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <%= f.input :place_of_disposition, label: 'Name', error: 'Name is mandatory, please specify one.' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5">
          <%= f.input :place_of_disposition_city, label: 'City', error: 'City is mandatory, please specify one.' %>
        </div>
        <div class="col-md-2">
          <%= f.input :place_of_disposition_state, label: 'State', error: 'State is mandatory, please specify one.' %>
        </div>
      </div>
    </div>
  </fieldset>

   <fieldset>
    <legend>Funeral Facility</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <%= f.input :funeral_facility_name, label: 'Facility Name', error: 'Facility Name is mandatory, please specify one.' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-10">
          <%= f.input :funeral_facility_street_and_number, label: 'Street', error: 'Street is mandatory, please specify one.' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5">
          <%= f.input :funeral_facility_city, label: 'City', error: 'City is mandatory, please specify one.' %>
        </div>
        <div class="col-md-2">
          <%= f.input :funeral_facility_state, label: 'State', error: 'State is mandatory, please specify one.' %>
        </div>
        <div class="col-md-2">
          <%= f.input :funeral_facility_zip, label: 'Zip Code', error: 'Zip code is mandatory, please specify one.' %>
        </div>
        <div class="col-md-3">
          <%= f.input :funeral_facility_county, label: 'County', error: 'County is mandatory, please specify one.' %>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Funeral Service License Number</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3">
          <%= f.input :funeral_director_license_number, label: false, error: 'Funeral Service License Number is mandatory, please specify one.' %>
        </div>
      </div>
    </div>
  </fieldset>
  
  <fieldset>
    <legend>Informant's Name</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4">
          <%= f.input :informants_name_first, label: 'First Name', error: 'First name is mandatory, please specify one.' %>
        </div>
        <div class="col-md-3">
          <%= f.input :informants_name_middle, label: 'Middle Name' %>
        </div>
        <div class="col-md-4">
          <%= f.input :informants_name_last, label: 'Last Name', error: 'Last name is mandatory, please specify one.' %>
        </div>
        <div class="col-md-1">
          <%= f.input :informants_suffixes, label: 'Suffix' %>
        </div>
      </div>
    </div>
  </fieldset>

   <fieldset>
    <legend>Informant's Address</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <%= f.input :informants_mailing_address_street_and_number, label: 'Street', error: 'Street is mandatory, please specify one.' %>
        </div>
        <div class="col-md-2">
          <%= f.input :informants_appt_number, label: 'Apt.' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5">
          <%= f.input :informants_mailing_address_city, label: 'City', error: 'City is mandatory, please specify one.' %>
        </div>
        <div class="col-md-2">
          <%= f.input :informants_mailing_address_state, label: 'State', error: 'State is mandatory, please specify one.' %>
        </div>
        <div class="col-md-2">
          <%= f.input :informants_mailing_address_zip_code, label: 'Zip Code', error: 'Zip code is mandatory, please specify one.' %>
        </div>
        <div class="col-md-3">
          <%= f.input :informants_mailing_address_county, label: 'County', error: 'County is mandatory, please specify one.' %>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="text-right">
    <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-none' %>
    <%= f.button :submit, 'Next', class: 'btn btn-primary' %>
  </div>

<% end %>