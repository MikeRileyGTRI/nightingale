<%= simple_form_for(@death_record, html: { class: 'form-vertical' }, method: :put, url: wizard_path) do |f| %>

 <fieldset>
    <legend>Method of Disposition</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <%= f.input :method_of_disposition, required: true, label: 'Please select the method of Disposition:', as: :radio_buttons, :collection => ['Burial', 
                                                                                                                                                     'Cremation', 
                                                                                                                                                     'Donation', 
                                                                                                                                                     'Entombment', 
                                                                                                                                                     'Removal from State',
                                                                                                                                                     'Other (specify)'], error: 'Can\'t be blank..' %>
        </div>
        <div class= "col-md-5">
          <%= f.input :method_of_disposition_specified, label: false %>                                                                             
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Place of Disposition</legend>
    <%= render :partial => 'death_record/steps/forms/addresses/place_of_disposition', :locals=>{:f=>f} %>
  </fieldset>

   <fieldset>
    <legend>Funeral Facility</legend>
    <%= render :partial => 'death_record/steps/forms/addresses/funeral_director', :locals=>{:f=>f} %>
  </fieldset>

  <fieldset>
    <legend>Funeral Service License Number</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8">
          <%= f.input :funeral_director_license_number, required: true, label: 'Please enter the License Number of the relevant Funeral Service:', error: 'Funeral Service License Number is mandatory, please specify one.' %>
        </div>
      </div>
    </div>
  </fieldset>
  
  <fieldset>
    <legend>Informant's Name</legend>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4">
          <%= f.input :informants_name_first, required: true, label: 'First Name', error: 'First name is mandatory, please specify one.' %>
        </div>
        <div class="col-md-3">
          <%= f.input :informants_name_middle, label: 'Middle Name' %>
        </div>
        <div class="col-md-4">
          <%= f.input :informants_name_last, required: true, label: 'Last Name', error: 'Last name is mandatory, please specify one.' %>
        </div>
        <div class="col-md-1">
          <%= f.input :informants_suffixes, label: 'Suffix' %>
        </div>
      </div>
    </div>
  </fieldset>

   <fieldset>
    <legend>Informant's Address</legend>
    <%= render :partial => 'death_record/steps/forms/addresses/generic_address', :locals=>{:f=>f, :identifier=>'informants_mailing_address'} %>
  </fieldset>

  <%= render :partial => 'death_record/steps/forms/supplemental', :locals=>{:f=>f} %>

  <div class="text-right">
    <%= link_to 'Back', :back, {:class=>"btn btn-default"} %>
    <%= link_to 'Cancel', root_path, {:class=>"btn btn-default"} %>
    <%= f.button :submit, 'Next', class: 'btn btn-primary' %>
  </div>

<% end %>